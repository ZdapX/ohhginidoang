<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DDoS Live Monitor</title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <div id="status-card" class="card low">
            <p class="label">Status Keamanan</p>
            <h2 id="attack-status">Menghubungkan...</h2>
            <p id="detect-msg">Memulai pemantauan...</p>
        </div>

        <div class="card chart-container">
            <p class="label">Live Activity (Request Per Second)</p>
            <canvas id="attackChart"></canvas>
        </div>

        <div class="stats-grid">
            <div class="card">
                <p class="label">Requests / Sec</p>
                <h2 id="rps-value">0</h2>
            </div>
            <div class="card">
                <p class="label">Network Status</p>
                <h2 id="load-msg">Stable</h2>
            </div>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('attackChart').getContext('2d');
        let chartData = Array(40).fill(0); 

        const attackChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: Array(40).fill(''),
                datasets: [{
                    data: chartData,
                    borderColor: '#00ff88',
                    borderWidth: 2,
                    pointRadius: 0,
                    fill: false,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { 
                        beginAtZero: true, 
                        suggestedMax: 100,
                        grid: { color: '#1e293b' },
                        ticks: { color: '#64748b' }
                    },
                    x: { display: false }
                },
                plugins: { legend: { display: false } },
                animation: { duration: 400 }
            }
        });

        async function updateStats() {
            try {
                // Tambahkan random parameter agar tidak di-cache browser
                const response = await fetch('/api/stats?t=' + Date.now());
                const data = await response.json();

                document.getElementById('rps-value').innerText = data.rps;
                document.getElementById('attack-status').innerText = data.status;
                
                const card = document.getElementById('status-card');
                card.className = 'card ' + data.level;

                if (data.rps > 15) {
                    document.getElementById('detect-msg').innerText = "ADA YANG MENCOBA MENYERANG!";
                    document.getElementById('detect-msg').style.color = "#ff4444";
                    attackChart.data.datasets[0].borderColor = "#ef4444";
                } else {
                    document.getElementById('detect-msg').innerText = "Sistem berjalan normal";
                    document.getElementById('detect-msg').style.color = "#94a3b8";
                    attackChart.data.datasets[0].borderColor = "#00ff88";
                }

                attackChart.data.datasets[0].data.push(data.rps);
                attackChart.data.datasets[0].data.shift();
                attackChart.update();

            } catch (err) {
                console.log("Retrying...");
            }
        }

        setInterval(updateStats, 1000);
    </script>
</body>
</html>
